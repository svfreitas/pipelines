//-----END CERTIFICATE-----
//''', clusterName: 'k8s-demo', contextName: '', credentialsId: 'jenkins-k8s', namespace: 'devopsbox', serverUrl: 'https://kubernetes.default/') {
 //   sh 'kubectl config view' 
//}
//            }
 //        }
  //      }
    }
}
